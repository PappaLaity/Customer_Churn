# Dockerfile.airflow
FROM apache/airflow:2.9.0-python3.11

USER root
WORKDIR /opt/airflow

# Copy application files
COPY dags ./dags
COPY src ./src

# Switch to airflow user for pip installation
USER airflow
COPY requirements.txt .
RUN pip install -r requirements.txt